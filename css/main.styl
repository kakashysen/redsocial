azul = #22BCE0
naranja = #DD4F24
gris_oscuro = #444
gris_claro = #999
blanco_suave = #DDD
amarillo_estrella = #FABE15

@font-face {
	font-family: 'misiconos';
	src:url('../fonts/icomoon.eot?1ttuo3');
	src:url('../fonts/icomoon.eot?#iefix1ttuo3') format('embedded-opentype'),
		url('../fonts/icomoon.woff?1ttuo3') format('woff'),
		url('../fonts/icomoon.ttf?1ttuo3') format('truetype'),
		url('../fonts/icomoon.svg?1ttuo3#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color blanco_suave
	text-align center
	padding 15px 0
	h3
		font-size 16px
		
		strong
			display block
			
	.jappsku
		
		&:before
		&:after
			content " - " 

header
	background gris_oscuro
	box-shadow 0px 5px 0px rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 1
	
	.logo
		border-right 1px solid azul
		float left
		width 60px
		
		img
			width 52px
	
	.titular
		padding 0 80px 0 70px
	
		.filtro
			color azul
			font-size 12px
			font-style italic
			text-decoration none
			
		.publicar
			background naranja
			color white
			font-size 14px
			font-style italic
			padding 3px 6px 3px 6px
			position absolute
			text-decoration none
			text-shadow 2px 2px gris_oscuro
			right 80px

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	
	.usuario
		position absolute
		right 0
		top 0
		
		.avatar
			margin 10px 25px
			
			img
				border-radius 50%
				position relative
				width 50px
				z-index 2
				
		.flechita
			background naranja
			color white
			display block
			margin 5px 10px
			padding 3px
			position absolute
			right 0
			text-align right
			text-decoration none
			top 20px
			width 50%
			
nav
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		position absolute
		top 0
		

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		
		&::-webkit-scrollbar
			display none
		
		li
			display inline-block
			
			a
				color white
				display block
				text-decoration none
				margin 0 0.5em
				padding 0 0.2em
			
.posts
	padding 0.5em
	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		margin-bottom 0.5em
		
		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
				
			.datos
				float right
				
				.comentarios
					background gris_claro
					color white
					display inline-block
					font-size 12px
					margin-right 5px
					padding 0.3em
					text-decoration none
					
				.estrellita
					text-decoration none
					&:before
						color amarillo_estrella
						content "\e9d9"
						font-family "misiconos"
						font-size 24px
			.votos
				color gris_claro
				float left
				
				.down
				.up
					text-decoration none
					font-family "misiconos"
					font-size 24px

				.down
					&:before
						color red
						content "\e601"

				.up
					&:before
						color green
						content "\e600"
		
		.descripcion
			
			.detalles
				height 160px
				margin-left 130px
				
				.autor
					color gris_claro
					margin 0.5em 0 0.3em 0
					a
						color naranja
						text-decoration none
				.fecha
					color gris_claro
					float right
					margin 0 1em 0 0 
				
				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none
						

				.titulo
					color gris_oscuro
					font-style italic
					font-size 18px
					margin 0
					padding 0.5em 0.5em 0 0
						
			.imagen
				float left
				margin 0
				
				img
					height 160px
					vertical-align top
					width 120px
					

@media screen and (min-width: 768px)

	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%
					